#team
    #all_workers
        display: flex;
        flex-direction: row;
        margin: 0 auto;

        align-content: space-between;
        justify-content: space-between;
        width: 1200px;
        align-items: center;

        .worker
            background-image: url(../img/panneau_grand.png)
            background-size: contain
            width: 256px;
            height: 384px;
            img 
                width: 164px;
                height: 164px;
                border-radius: 50%;
                box-shadow: 4px 4px 4px black;

@media screen and (max-width: 480px)
    #team
        #all_workers
            display: flex;
            flex-direction: column;
            height: 1200px;
            width: 386px;
            align-items: center;