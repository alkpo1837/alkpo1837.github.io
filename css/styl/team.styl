#team
    #all_workers
        display: flex;
        flex-direction: row;
        margin: 0 auto;

        align-content: space-between;
        justify-content: space-between;
        width: 1200px;
        align-items: center;

        .worker
            background-image: url(../img/panneau_grand.png)
            background-size: contain
            width: 256px;
            height: 384px;
            h2
                margin: 8px;

            img 
                width: 164px;
                height: 164px;
                border-radius: 50%;
                box-shadow: 4px 4px 4px black;
            p
                margin: 8px;
                margin-top: 16px;
                color: rgb(10, 10, 10)
                font-size: 18px;
            a
                color: rgb(10, 10, 10)
                font-weight: bold;    

@media screen and (min-width: 880px) and (max-width: 1024px)
    #team
        #all_workers
            width: 840px;
            .worker
                width: 256px;
                height: 256px;

@media screen and (max-width: 880px)
    #team
        #all_workers
            display: flex;
            flex-direction: column;
            height: 1200px;
            width: 386px;
            align-items: center;