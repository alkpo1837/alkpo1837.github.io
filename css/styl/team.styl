#team
    padding: 64px 0;
    
    #all_workers
        display: flex;
        flex-direction: row;
        margin: 0 auto;

        align-content: space-between;
        justify-content: space-between;
        width: 1200px;
        align-items: center;

        @media screen and (max-width: 1500px)
            width: 1100px;
        @media screen and (max-width: 1200px)
            width: 840px;
        @media screen and (max-width: 880px)
            display: flex;
            flex-direction: column;
            width: 100%;
            margin: 0 8px;
            align-items: center;
            
        .worker
            display: flex;
            flex-direction: row;
            width: 100%;
            color: rgb(10, 10, 10)
            font-size: 18px;
            justify-content: center;

            @media screen and (max-width: 1024px)
                height: 256px;

            @media screen and (max-width: 880px)
                height: auto;
                padding-bottom: 64px;

            .worker_image 
                width: 160px;
                height: 160px;
                img 
                    width: 100%
                    height: 100%;

            .worker_info
                padding-left: 8px;
                display: flex;
                flex-direction: column;

                @media screen and (max-width: 880px)
                    text-align: left

                .worker_name
                    margin: 6px;   

                    @media screen and (max-width: 880px)
                        font-size: 32px;
                ul
                    margin: 6px;   
                    padding-left: 0
                    list-style: none;

                    @media screen and (max-width: 880px)
                        font-size: 16px;

                .website_icon  
                    width: 32px;
                    height: 32px;

                    @media screen and (max-width: 880px)
                        width: 24px;
                        height: 24px;

                .websites
                    li
                        display: inline-block;