#team
    #all_workers
        display: flex;
        flex-direction: row;
        margin: 0 auto;
        padding-top: 32px;

        align-content: space-between;
        justify-content: space-between;
        width: 1200px;
        align-items: center;

        @media screen and (max-width: 1500px)
            width: 1100px;
        @media screen and (max-width: 1200px)
            width: 840px;
        @media screen and (max-width: 880px)
            display: flex;
            flex-direction: column;
            width: 386px;
            align-items: center;
        @media screen and (max-width: 400px)
            width: 280px
            
        .worker
            width: 256px;
            height: 384px;
            color: rgb(10, 10, 10)
            font-size: 18px;

            @media screen and (max-width: 1024px)
                height: 256px;

            @media screen and (max-width: 880px)
                height: 540px;

            h2
                margin: 8px;

            img 
                width: 192px;
                height: 265px;
            p
                margin: 8px;
                margin-top: 16px;
            ul
                padding-left: 0
                list-style: none;
                text-align: center;
            a
                color: rgb(10, 10, 10)
                font-weight: bold;    