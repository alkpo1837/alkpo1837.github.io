#presentation
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    height: 1080px;

    @media screen and (max-width: 880px)
        display: block;
        height: 720px;

    .sheet_image
        width: 512px;
        min-width: 512px;
        height: 1080px;
        img
            width: 100%;
            height: 100%;

        @media screen and (max-width: 880px)
            display: none;

    .left_sheet
        margin-left: -64px;

        @media screen and (max-width: 1600px)
            margin-left: -128px;

        @media screen and (max-width: 1500px)
            margin-left: -280px;

        @media screen and (max-width: 1300px)
            margin-left: -384px;

        @media screen and (max-width: 1100px)
            margin-left: -420px;

    .right_sheet
        transform: scaleX(-1)
        margin-right: -64px;

        @media screen and (max-width: 1600px)
            margin-right: -128px;

        @media screen and (max-width: 1500px)
            margin-right: -280px;

        @media screen and (max-width: 1300px)
            margin-right: -384px;

        @media screen and (max-width: 1100px)
            margin-right: -420px;

    .presentation_content
        h1
            font-family: Elephant
            font-size: 128px
            margin: 32px;
            color: rgb(20, 20, 20)

            @media screen and (max-width: 800px)
                font-size: 92px;

        h3
            margin: 0px 32px;
            font-size: 36px;
            @media screen and (max-width: 800px)
                font-size: 28px;
            @media screen and (max-width: 500px)
                margin: 0px 16px;

        .illustration
            width: 85%;
            height: auto;
            margin: auto;
            margin-top: 96px;
            border-radius: 16px;
            img
                width: 100%;
                height: 100%;

            // @media screen and (max-width: 880px)
            //     width: 320px;
            //     height: 180px;

        .google_play
            padding-top: 128px;
            width: 256px;
            @media screen and (max-width: 880px)
                padding-top: 64px;
                width: 192px;
