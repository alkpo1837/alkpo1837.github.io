#presentation
    #top_content
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        width: auto;
        // height: 1080px;

        @media screen and (max-width: 880px)
            display: block;
            height: auto;
            // height: 720px;

        .sheet_image
            width: 220px;
            min-width: 220px;
            max-width: 220px;
            height: 880px;
            img
                width: 100%;
                height: 100%;

            @media screen and (max-width: 880px)
                display: none;

        .right_sheet
            transform: scaleX(-1)

        .presentation_content
            display: flex;
            flex-direction: row;
            justify-content: space-around;
            width: 85%;
            height: 650px;
            padding-top: 128px;

            @media screen and (max-width: 880px)
                display: block;
                width: 100%;
                padding-top: 32px;
                height: auto;

            .name_and_catchphrase
                width: 430px;

                @media screen and (max-width: 880px)
                    width: auto;
                    
                h1
                    font-family: Elephant
                    font-size: 128px
                    margin: 32px;
                    color: rgb(20, 20, 20)

                    @media screen and (max-width: 800px)
                        font-size: 92px;

                h3
                    margin: 0px 32px;
                    font-size: 36px;
                    @media screen and (max-width: 800px)
                        font-size: 28px;
                    @media screen and (max-width: 500px)
                        margin: 0px 16px;

                .google_play
                    margin: 64px auto;
                    width: 256px;

                    img 
                        width: 100%
                        height: auto;

                    @media screen and (max-width: 520px)
                        margin: 64px auto;

                        width: 192px;

            .illustration
                width: 380px;
                height: auto;
                img
                    width: 100%;

                @media screen and (max-width: 880px)
                    display: none;

    .flower
        @media screen and (min-width: 880px)
            display: none;
        
        width: 240px;
        height: auto;
        margin-left: auto;
        margin-right: 0;
        img
            width: 100%;
            height: 100%;


