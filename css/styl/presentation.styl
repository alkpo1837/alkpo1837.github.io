#presentation
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    height: 1080px;

    @media screen and (max-width: 880px)
        display: block;

    .sheet_image
        width: 512px;
        height: 1080px;
        img
            width: 100%;
            height: 100%;

        @media screen and (max-width: 880px)
            display: none;

    .sheet_rotated
        transform: scaleX(-1)

    .presentation_content
        h1
            font-family: Elephant
            font-size: 128px
            margin: 32px;
            color: rgb(20, 20, 20)

            @media screen and (max-width: 800px)
                font-size: 92px;

        h3
            margin: 0px 32px;
            font-size: 36px;
            @media screen and (max-width: 800px)
                font-size: 28px;

        .illustration
            width: 726px;
            height: 500px;
            margin: auto;
            margin-top: 96px;
            border-radius: 16px;
            img
                width: 100%;
                height: 100%;

    .google_play    
        padding-top: 128px;
        width: 256px;
