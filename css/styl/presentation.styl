#presentation
    #top_content
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        width: auto;

        @media screen and (max-width: 880px)
            display: block;
            height: auto;

        .sheet_image
            width: 220px;
            min-width: 220px;
            max-width: 220px;
            height: 880px;
            img
                width: 100%;
                height: 100%;

            @media screen and (max-width: 1200px)
                display: none;

        .right_sheet
            transform: scaleX(-1)

        .presentation_content
            display: flex;
            flex-direction: row;
            justify-content: space-around;
            width: 85%;
            height: 480px;
            padding-top: 128px;

            @media screen and (max-width: 1200px)
                padding-top: 64px;
                width: 100%;
                padding-bottom: 64px

            @media screen and (max-width: 880px)
                display: block;
                width: 100%;
                padding-top: 32px;
                height: auto;

            .name_and_catchphrase
                width: 430px;
                display: flex;
                justify-content: space-between;
                flex-direction: column;

                @media screen and (max-width: 880px)
                    width: auto;
                    
                h1
                    font-family: Elephant
                    font-size: 128px
                    color: rgb(20, 20, 20)
                    margin: 0;

                    @media screen and (max-width: 480px)
                        font-size: 92px;
                    @media screen and (max-width: 340px)
                        font-size: 80px;    

                h3
                    margin: 32px 32px;
                    font-size: 36px;
                    @media screen and (max-width: 800px)
                        font-size: 30px
                    @media screen and (max-width: 340px)
                        font-size: 26px;
                        margin: 16px 16px;

                .google_play
                    margin: 64px auto;
                    width: 256px;
                    margin-bottom: 0px;

                    img 
                        width: 100%
                        height: auto;

                    @media screen and (max-width: 520px)
                        margin: 64px auto;
                        width: 192px;

            .illustration
                width: auto;
                height: 480px;
                img
                    height: 90%;

                @media screen and (max-width: 880px)
                    display: none;

    .flower
        @media screen and (min-width: 880px)
            display: none;
        
        width: 128px;
        height: auto;
        margin-left: auto;
        margin-right: 0;
        margin-bottom: -6px; // ugly fixh
        margin-top: 22px;

        img
            width: 100%;
            height: 100%;


