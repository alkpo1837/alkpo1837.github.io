@import 'config.styl'

html
	scroll-behavior: smooth;

body
	margin: 0;
	width: 100%;
	text-align: center;
	background-image: url('../img/fond_marbre.png')
	background-repeat: repeat;
	font-family: Overpass

	h2
		font-size: 52px;

header 
	background-image: url("../img/rideau1.png");
	background-repeat: repeat;
	height: 64px;
	width: 100%;

footer 
	#footer_background
		background-image: url("../img/ecran_capture_large.png");
		background-repeat: no-repeat;

		background-size: contain;
		height: 328px;
		width: 768px;

		margin: 0 auto;

@media screen and (max-width: 480px)
	footer 
		#footer_background
			width: 320px;
			height: 64px;