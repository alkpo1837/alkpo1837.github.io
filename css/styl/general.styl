@import 'config.styl'

html
	scroll-behavior: smooth;

body
	margin: 0;
	width: 100%;
	text-align: center;
	font-family: Overpass
	background-color: rgb(240, 240, 240)
	color: #3c3c3c

	h2
		font-size: 52px;
		color: rgb(20, 20, 20)
	a
		color: rgb(10, 10, 10)
		font-style: bold;
		text-decoration: none;
		&:hover
			text-decoration: underline;

	.main_div
		// padding-top: 128px;
		// padding-bottom: 128px;


header 
	background-image: url("../img/rideau1.png");
	background-repeat: repeat;
	height: 64px;
	width: 100%;

	@media screen and (min-width: 880px)
		display: none;

.frame_separator
	display: flex;
	flex-direction: row;
	height: 30px;
	width: 100%;
	.left_corner
		width: 123px;
		height: 30px;
	.middle_corner
		background-image: url('../img/middle_part.png')
		background-repeat: repeat-x;
		background-size: contain;
		width: 2048px;
		height: 30px;
	.right_corner
		width: 123px;
		height: 30px;

footer 
	a 
		color: rgb(240, 240, 240)

	color: rgb(240, 240, 240)
	margin-top: 128px;
	
	// Footer has a ratio of 2.55 (1043 x 409)
	#footer_background
		text-align: bottom;
		background-image: url("../img/footer.png");
		background-repeat: no-repeat;
		background-size: 520px 204px;
		width: 520px;
		height: 204px;

		margin: auto;

		@media screen and (max-width: 560px)
			background-size: 320px 125px;
			width: 320px;
			height: 125px;

		#footer_content
			display: flex;
			flex-direction: row;
			align-items: center;
			justify-content: center;

			width: 520px;
			
			padding-top: 152px;

			@media screen and (max-width: 560px)
				font-size: 14px;
				width: 320px
				padding-top: 95px;

			.footer_icon
				width: 32px;
				height: 32px;
				padding-left: 16px;
				color: rgb(240, 240, 240)
				img 
					width: 100%;
					height: 100%;

				@media screen and (max-width: 560px)
					width: 18px;
					height: 18px;
					padding-left: 8px

			.first_icon
				margin-left: 32px;

				@media screen and (max-width: 560px)
					margin-left: 16px;