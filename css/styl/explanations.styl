@import 'config.styl'

#explanations
	font-size: 32px

	#instructions_and_mockup_phone
		display: flex;
		flex-direction: row;
		width: 1200px;
		margin-left: auto;
		margin-right: auto;
		align-items: center;
		justify-content: space-between;
		
		#instructions
			width: 512px;
			li
				p
					text-align: left

		#mockup_phone	
			img 
				width: 386px;

	#screenshots
		display: flex;
		flex-direction: row;
		max-width: 1200px;
		margin-left: auto;
		margin-right: auto;
		align-content: space-between;
		align-items: center
		justify-content: space-between;
		img 
			width: 300px;

