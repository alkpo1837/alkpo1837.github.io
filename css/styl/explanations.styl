@import 'config.styl'

#explanations
	// margin-top: -42px;
	font-size: 32px
	background-image: url('../img/fond_marbre.png')
	background-repeat: repeat;
	padding: 64px 0;

	h2
		padding: 64px 0;

	@media screen and (max-width: 480px)
		font-size: 22px;

	#scan_instructions
		.full_instruction
			font-size: 48px;
		.rart_marker
			width: 640px;
			height: auto;
			margin: 32px 0;
			box-shadow: 4px 4px 8px black;

			@media screen and (max-width: 880px)
				width: 320px;

		.sub_instruction
			font-size: 26px;
			color: #626262

	#instructions_and_mockup_phone
		display: flex;
		flex-direction: row;
		width: 1200px;
		margin-left: auto;
		margin-right: auto;
		align-items: top;
		justify-content: space-between
		padding-top: 128px;

		@media screen and (max-width: 1300px)
			width: 1024px;
		@media screen and (max-width: 880px)
			flex-direction: column-reverse
			align-items: center
			width: 320px;
			
		#instructions
			display: flex;
			flex-direction: column;
			width: 768px;

			@media screen and (max-width: 1300px)
				width: 512px;
			@media screen and (max-width: 1100px)
				font-size: 26px;
				width: 860px;
			@media screen and (max-width: 880px)
				width: 600px;
			@media screen and (max-width: 480px)
				width: 320px;

			.instruction_entry
				display: flex;
				flex-direction: row;
				padding-bottom: 48px;
				.instruction_icon
					width: 48px;
					min-width: 48px;
					height: 48px;
					padding-right: 24px;
					img 	
						width: 100%;
						height: 100%;
				.instruction_text
					text-align: left;
					padding-top: 8px;

		#mockup_phone	
			width: 320px;
			height: auto;
			img
				width: 100%;
				height: 100%;

			@media screen and (max-width: 880px)
				width: 260px;