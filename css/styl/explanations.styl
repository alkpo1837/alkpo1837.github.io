@import 'config.styl'

#explanations
	font-size: 32px
	background-image: url('../img/fond_marbre.png')
	background-repeat: repeat;

	h2
		padding: 64px 0;

	@media screen and (max-width: 480px)
		font-size: 22px;

	#scan_instructions
		.scan_marker
			font-size: 50px;
			font-family: OverpassBold
			font-weight: bold;
			padding: 64px 0;
			padding-bottom: 32px;
			line-height: 1.1;
			
			@media screen and (max-width: 500px)
				font-size: 38px;
				padding: 48px 4px;
				padding-bottom: 32px;
				


		.rart_marker
			width: 640px;
			height: auto;
			margin: 0px auto;
			
			img 
				width: 100%;
				height: 100%;
				box-shadow: 4px 4px 8px black;


			@media screen and (max-width: 880px)
				width: 320px;

			@media screen and (max-width: 500px)
				width: 280px;

			@media screen and (max-width: 320px)
				width: 240px;

		.sub_instruction
			margin-top: 32px
			font-size: 26px;
			color: #626262

			@media screen and (max-width 880px)
				font-size: 18px;
			@media screen and (max-width: 500px)
				font-size: 16px;

	#instructions_and_mockup_phone
		display: flex;
		flex-direction: row;
		margin-left: auto;
		margin-right: auto;
		justify-content: center
		padding-top: 128px;
		padding-bottom: 64px;
		width: 1024px;
		align-items: center;

		@media screen and (max-width: 880px)
			flex-direction: column-reverse
			align-items: center
			width: 320px;
			padding-top: 64px;
		@media screen and (max-width: 500px)
				width: 280px;

		#mockup_phone	
			width: 320px;
			height: auto;
			margin-right: 72px;

			@media screen and (max-width: 880px)
				margin-right: 0px;

			img
				width: 100%;
				height: 100%;

			@media screen and (max-width: 420px)
				width: 260px;
			
		#instructions
			display: flex;
			flex-direction: column;
			width: 512px;

			@media screen and (max-width: 880px)
				width: 320px

			.instruction_entry
				display: flex;
				flex-direction: row;
				padding-bottom: 48px;

				.instruction_icon
					width: 48px;
					min-width: 48px;
					height: 48px;
					padding-right: 24px;

					@media screen and (max-width: 880px)
						padding-right: 0px;

					img 	
						width: 100%;
						height: 100%;

				.instruction_text
					text-align: left;
					padding-top: 4px;
					padding-left: 24px;
					max-width: 300px;

					@media screen and (max-width: 880px)
						padding-top: 8px;
						font-size: 28px;
					@media screen and (max-width: 880px)
						font-size: 20px;


