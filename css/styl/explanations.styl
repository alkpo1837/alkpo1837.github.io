@import 'config.styl'

#explanations
	margin-top: -42px;
	font-size: 32px
	background-image: url('../img/fond_marbre.png')
	background-repeat: repeat;

	h2
		padding: 64px 0;

	.scan_instruction
		margin: 32px
		.full_instruction
			font-size: 48px;
		.rart_marker
			width: 640px;
			height: auto;
			margin: 32px;
			box-shadow: 4px 4px 8px black;
		.sub_instruction
			font-size: 26px;
			color: #626262

	#instructions_and_mockup_phone
		display: flex;
		flex-direction: row;
		width: 1200px;
		margin-left: auto;
		margin-right: auto;
		align-items: top;
		justify-content: space-between
		padding-top: 128px;
		
		#instructions
			display: flex;
			flex-direction: column;
			width: 768px;
			
			.instruction_entry
				display: flex;
				flex-direction: row;
				padding-bottom: 48px;
				.instruction_icon
					width: 48px;
					height: 48px;
					padding-right: 24px;
					img 	
						width: 48px;
						height: 48px;
				.instruction_text
					text-align: left;
					padding-top: 8px;

		#mockup_phone	
			img 
				width: 320px;
				height: auto;

@media screen and (max-width: 1300px)
	#explanations
		#instructions_and_mockup_phone
			width: 1024px;
			#instructions
				width: 512px;

@media screen and (max-width: 1100px)
	#explanations
		font-size: 26px
		#instructions_and_mockup_phone
			width: 860px;
		#mockup_phone	
			img 
				width: 260px;
				height: auto;

@media screen and (max-width: 880px)
	#explanations
		font-size: 32px
		#instructions_and_mockup_phone
			flex-direction: column;
			width: 800px;
			#instructions
				width: 760px;

@media screen and (max-width: 780px)
	#explanations
		font-size: 26px

		#instructions_and_mockup_phone
			width: 386px;

			#instructions
				width: 580px;
				li
					p
						text-align: left

@media screen and (max-width: 480px)
	#explanations
		font-size: 22px;
		h2
			padding-top: 16px;

		#instructions_and_mockup_phone
			#instructions
				width: 386px;
				ul
					padding-left: 16px;
					li
						.instruction_icon
							width: 40px;
							height: 40px;
							vertical-align: bottom;
							padding-right: 8px;