@import 'config.styl'

#div_02_app_explanations
	background-image: url('../img/fond_marbre.png')
	background-repeat: repeat;
	font-size: 32px

	#div_explanations
		display: flex;
		flex-direction: row;
		width: 1200px;
		margin-left: auto;
		margin-right: auto;
		align-items: center;
		justify-content: flex-start;
		
		#div_instructions
			// background-color: blue;
			flex: 1;
			max-width: 512px;
			li
				p
					text-align:left

		#div_mockup_phone	
			// background-color: red;
			flex: 1;
			max-width: 512px;

	#div_screenshots
		display: flex;
		flex-direction: row;
		max-width: 1200px;
		margin-left: auto;
		margin-right: auto;
		align-content: space-between;
		justify-content: space-between;

@media screen and (max-width: 880px)
	#div_02_app_explanations
		#div_explanations
			flex-direction: column;
			width: auto;
		
		#div_screenshots
			flex-direction: column;
