#div_03_team
    #div_all_workers
        display: flex;
        flex-direction: row;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
        align-content: space-between;
        justify-content: space-between;
        
        .div_worker
            background-image: url(../img/panneau_grand.png)
            flex: 1;
            width: 256px;
            max-width: 256px;
            height: 384px;
            max-height: 384px;

@media screen and (max-width: 1376px)
    #div_03_team
        #div_all_workers
            width: 880px;    

@media screen and (max-width: 880px)
    #div_03_team
        #div_all_workers
            flex-direction: column;
            width: 512px;